# Use ~/.zprofile to set the PATH and EDITOR environment variables.
# And anything else that only needs to be set once on login.

# GPG should use tty
export GPG_TTY="$(tty)"
export TMUX_PLUGIN_MANAGER_PATH="$XDG_CONFIG_HOME/tmux/plugins/"

# Source any env files split off from zprofile
source ~/.zsh_paths

# Load private additions if they exist
if [[ -f "${HOME}/.zprofile.local" ]]; then
  source "${HOME}/.zprofile.local"
fi

# Source env variables from programs
eval "$(dircolors -b "$HOME"/.dircolors)"
eval "$(brew shellenv)"
